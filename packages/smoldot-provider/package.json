{
  "name": "@substrate/smoldot-provider",
  "version": "0.0.1",
  "description": "PolkadotJS provider for smoldot wasm light client",
  "repository": "https://github.com/paritytech/substrate-connect.git",
  "author": "Parity Team <admin@parity.io>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "ava": {
     "nonSemVerExperiments": {
       "configurableModuleFormat": true
     },
     "extensions": { "ts": "module" },
     "nodeArguments": [
         "--loader=ts-node/esm", "--experimental-specifier-resolution=node"
     ],
     "require": [ "ts-node/register" ]
  },
  "env": {
    "NODE_OPTIONS": "--experimental-module-resolution=node"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist/ && rm -rf node_modules/",
    "test": "ava"
  },
  "release": [
    "dist/**"
  ],
  "sideEffects": "false",
  "dependencies": {
    "@polkadot/rpc-provider": "^3.4.1",
    "eventemitter3": "^4.0.7",
    "smoldot": "^0.1.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
